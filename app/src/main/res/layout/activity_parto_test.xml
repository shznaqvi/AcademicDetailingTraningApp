                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/PartoTest01a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:tag="1"
                                android:text="@string/PartoTest01a" />

                            <RadioButton
                                android:id="@+id/PartoTest01b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:tag="2"
