                            <RadioButton
                                android:id="@+id/vb02a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:tag="1"
                                android:text="@string/vb_02a" />

                            <RadioButton
                                android:id="@+id/vb02b"
