<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_lg"
            android:orientation="vertical"
            android:paddingStart="24dp"

            android:paddingTop="?attr/actionBarSize"

            android:paddingEnd="24dp">


            <TextView
                android:id="@+id/lblAppVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@color/lightOrange"
                android:textAlignment="center"
                android:textColor="@color/darkRed"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Hello! Mustufa Ansari"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/capsule_label"
                        android:elevation="5dp"
                        android:text="District Selected"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/districtName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="86dp"
                        android:background="@color/gray"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingStart="24dp"
                        android:paddingEnd="12dp"
                        android:text="None"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13sp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/cardViewDashboard"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#ff9800">

                    <LinearLayout
                        android:id="@+id/linLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/userName"
                        android:layout_margin="16dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's Forms"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/formsToday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardViewDashboard"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#f44336">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/userName"
                        android:layout_margin="16dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unsynced Forms"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/unsynced_forms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/cardViewDashboard"
                    android:layout_width="0dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#9c27b0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userName"
                        android:layout_margin="16dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Data Download"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/lastDownload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cardViewDashboard"
                    android:layout_width="0dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#00bcd4">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userName"
                        android:layout_margin="16dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Data Upload"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/lastUpdated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/top_round_shape"
                    android:elevation="1dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="72dp"
                    android:paddingTop="48dp"
                    android:paddingEnd="72dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:padding="12dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/startTraining"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="sectionPress"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:drawableStart="@drawable/ic_start_training"
                                    android:drawablePadding="12dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:minWidth="460dp"
                                    android:padding="0dp"
                                    android:text="Start Training"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="36dp"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:includeFontPadding="false"
                                    android:text="Click here to start training"
                                    android:textColor="@color/gray"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_margin="12dp"
                                android:background="@drawable/ic_item_right_arrow"
                                android:textColor="@color/colorAccent"
                                android:textSize="24dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:padding="12dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/scheduleAppointment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="sectionPress"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:drawableStart="@drawable/ic_book_meeting"
                                    android:drawablePadding="12dp"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:minWidth="460dp"
                                    android:padding="0dp"
                                    android:text="Schedule Appointment"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="36dp"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:includeFontPadding="false"
                                    android:padding="0dp"
                                    android:text="Schedule an appointment for next meeting"
                                    android:textColor="@color/gray"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_margin="12dp"
                                android:background="@drawable/ic_item_right_arrow"
                                android:textColor="@color/colorAccent"
                                android:textSize="24dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/adminView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@color/grayOverlay"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:padding="6dp"
                            android:text="ADMIN OPTIONS"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/iden"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="Iden"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/secHH"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="HH"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/secCB"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="CB"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/secCS"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="CS"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/secIM1"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="IM1"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/secIM2"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="IM2"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/secPD"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="PD"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/secBF"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="BF"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/secCV"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="CV"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/secSE"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="SE"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/secEND"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/colorPrimary"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="END"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dbManager"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/blackOverlay"
                                android:elevation="1dp"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="Android Database Manager"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/changePassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="sectionPress"
                            android:text="Password Change" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/capsule"
                    android:elevation="1dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:minHeight="56dp"
                    android:radius="10dp"
                    android:text="MAIN SCREEN"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>



        </LinearLayout>


    </FrameLayout>


</layout>
